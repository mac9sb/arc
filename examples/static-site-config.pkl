/// Arc configuration for static sites.
///
/// This example shows how to configure multiple static sites
/// with different domains.
amends "modulepath:/ArcConfiguration.pkl"

/// Optional: Change proxy port (default: 8080)
proxyPort = 8080

/// Optional: Custom log directory
logDir = "~/.arc/logs"

sites {
    /// Main website
    new StaticSite {
        name = "main-site"
        domain = "localhost"
        outputPath = "sites/main/.output"
    }
    
    /// Blog subdomain
    new StaticSite {
        name = "blog"
        domain = "blog.localhost"
        outputPath = "sites/blog/.output"
    }
    
    /// Documentation subdomain
    new StaticSite {
        name = "docs"
        domain = "docs.localhost"
        outputPath = "sites/docs/.output"
    }
}
